<div class="auth main-container">
  <div class="content-box profile">
    <div class="header">
      <div class="profile-pic">
        <img src="{{user.imagePath}}">
      </div>
      <div class="main-info">
        <h1>{{user.username}}</h1>
        <p class="ranking"><span>#{{position}}</span> - {{user.points}} points</p>
      </div>
      {{#if owner}}
        <div class="edit">
          <a href="/editprofile/{{user.id}}" class="button simple small">Edit profile</a>
        </div>
      {{/if}}
    </div>

    <div class="questions">
