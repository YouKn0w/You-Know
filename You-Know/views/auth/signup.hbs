<div class="auth main-container">
  <div class="content-box">
    <h1>Signup</h1>

    <form action="/signup" method="POST" id="form-container" enctype="multipart/form-data">

      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="JohnSnow">

      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="">

      <label for="confirmpassword">Confirm password</label>
      <input id="confirmpassword" type="password" name="confirmpassword" placeholder="">

      <label for="email">Email</label>
      <input id="email" type="email" name="email" placeholder="johnsnow@ironhack.com">

      {{!-- <label for="photo">Photo</label>
      <input type="file" name="photo" id="photo"> --}}

      <div class="input-box">
        <input type="file" name="photo" id="photo" class="inputfile inputfile-2" data-multiple-caption="{count} files selected" multiple="">
        <label for="photo"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg> <span>Choose a file</span></label>
      </div>

      <button class="button">Create account</button>

      <p class="account-message">
        Do you already have an account?
        <a class="link" href="/login">Login</a>
      </p>
    </form>
    <p><a class="link" href="/">Back to home</a></p>
  </div>
</div>